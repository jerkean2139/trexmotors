{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "echo 'No build needed - using static files'",
  "outputDirectory": "server/public",
  "functions": {
    "api/[...path].ts": {
      "runtime": "@vercel/node@3"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}