{
  "version": 2,
  "buildCommand": "cp -r server/public dist/ && mkdir -p dist/public && cp -r server/public/* dist/public/",
  "outputDirectory": "dist/public",
  "functions": {
    "server/index.ts": {
      "runtime": "@vercel/node@3"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}